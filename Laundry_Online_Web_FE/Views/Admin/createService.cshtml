@{
    ViewBag.Title = "createService";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Service</h3></div>
                            <div class="card-body">
                                <form method="post" action="@Url.Action("createService")" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <div class="form-floating">
                                            <input name="Title" class="form-control" id="Title" type="text" placeholder="Enter your Title" required/>
                                            <label for="Title">Title</label>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-floating">
                                            <textarea name="Description" class="form-control" id="Description" placeholder="Enter your Description" style="height: 150px;"></textarea>
                                            <label for="Description">Description</label>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Image" class="form-label">Image Upload</label>
                                        <div class="custom-file-input-wrapper">
                                            <input type="file" class="custom-file-input" name="Image" id="Image" onchange="updateFileName(this)">
                                            <label class="custom-file-label" for="Image" id="ImageLabel">Choose file</label>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-floating">
                                            <input name="Unit" class="form-control" id="Unit" type="text" placeholder="Create a Unit" />
                                            <label for="Unit">Unit</label>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-floating">
                                            <input name="Price" class="form-control" id="Price" type="number" placeholder="Price" />
                                            <label for="Price">Price</label>
                                        </div>
                                    </div>

                                    <div class="mt-4 mb-0">
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary btn-block">Create</button>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>

<script>
    function updateFileName(input) {
        var fileName = "Choose file";
        if (input.files && input.files.length > 0) {
            fileName = input.files[0].name;
            document.getElementById('ImageLabel').classList.add('selected');
        } else {
            document.getElementById('ImageLabel').classList.remove('selected');
        }
        document.getElementById('ImageLabel').textContent = fileName;
    }
</script>


