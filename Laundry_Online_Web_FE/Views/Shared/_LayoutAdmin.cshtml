@{
    Layout = null;
    var employee = Session["employee"] as Laundry_Online_Web_FE.Models.ModelViews.EmployeeView;
    string fullName = (employee != null) ? employee.FirstName + " " + employee.LastName : "Tài khoản";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - Laundry Admin</title>

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="@Url.Content("~/content/admin/css/styles.css")" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- JS -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="sb-nav-fixed">
    <!-- Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark navbar-custom-small ">
        <a class="navbar-brand ps-3" href="@Url.Action("Index", "Admin")">Laundry Admin</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>

        <!-- Right navbar -->
        <ul class="navbar-nav ms-auto me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                    <span class="ms-2">@fullName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("AdminLogout", "Auth")">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- Sidebar -->
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <a class="nav-link" href="@Url.Action("Index", "Admin")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>

                        <!-- Order -->
                        <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#pagesCollapseOrder" aria-expanded="false">
                            <div class="sb-nav-link-icon"><i class="fas fa-box"></i></div>
                            Order / Service
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="pagesCollapseOrder" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="@Url.Action("OrderList", "Order")">Order List</a>
                                <a class="nav-link" href="@Url.Action("CreateOrder", "Order")">Create New Order</a>
                            </nav>
                        </div>

                        <!-- Customer -->
                        <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#pagesCollapseCustomer" aria-expanded="false">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-friends"></i></div>
                            Customer
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="pagesCollapseCustomer" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="@Url.Action("CustomerList", "Admin")">Customer Active</a>
                                <a class="nav-link" href="@Url.Action("AllCustomerList", "Admin")">All Customer</a>
                                <a class="nav-link" href="@Url.Action("CustomerInActive", "Admin")">Customer Inactive</a>
                            </nav>
                        </div>

                        <!-- Employee -->
                        <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#pagesCollapseEmployee" aria-expanded="false">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-tie"></i></div>
                            Employee
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="pagesCollapseEmployee" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="@Url.Action("AllEmployeeList", "Admin")">All Employee</a>
                                <a class="nav-link" href="@Url.Action("EmployeeList", "Admin")">Employee Active</a>
                            </nav>
                        </div>
                        <!-- Service -->
                        <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#pagesCollapseService" aria-expanded="false">
                            <div class="sb-nav-link-icon"><i class="fas fa-tags"></i></div>
                            Service & Pricing
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="pagesCollapseService" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="@Url.Action("ServiceList", "Admin")">Service List</a>
                                <a class="nav-link" href="@Url.Action("Index", "Package")">Package List</a>
                                <a class="nav-link" href="@Url.Action("PriceSetup", "Admin")">Price Setup</a>
                            </nav>
                        </div>

                        <!-- Payment -->
                        <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#pagesCollapsePayment" aria-expanded="false">
                            <div class="sb-nav-link-icon"><i class="fas fa-credit-card"></i></div>
                            Payment / Revenue
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="pagesCollapsePayment" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="@Url.Action("PaymentHistory", "Admin")">Payment History</a>
                                <a class="nav-link" href="@Url.Action("Revenue", "Admin")">Revenue</a>
                                <a class="nav-link" href="@Url.Action("PaymentMethods", "Admin")">Payment Methods</a>
                            </nav>
                        </div>

                        <!-- Feedback -->
                        <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#pagesCollapseFeedback" aria-expanded="false">
                            <div class="sb-nav-link-icon"><i class="fas fa-comment-dots"></i></div>
                            Feedback & Support
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="pagesCollapseFeedback" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="@Url.Action("SupportRequests", "Admin")">Support Requests</a>
                                <a class="nav-link" href="@Url.Action("ServiceReviews", "Admin")">Service Reviews</a>
                                <a class="nav-link" href="@Url.Action("SendSMS", "Admin")">Send SMS to Customers</a>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    @fullName
                </div>
            </nav>
        </div>

        <!-- Main content -->
        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Laundry Admin @DateTime.Now.Year</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- JS -->
    <script src="@Url.Content("~/content/admin/js/scripts.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/content/admin/js/datatables-simple-demo.js")"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
