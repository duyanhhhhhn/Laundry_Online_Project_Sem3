                        @if (!string.IsNullOrEmpty(name))
                        {
                            <li><a href="@Url.Action("Logout", "Home")" title="Logout">Logout</a></li>
                        }
                        else
                        {
                            <li><a href="@Url.Action("Login", "Home")" title="Login">Login</a></li>
                            <li><a href="@Url.Action("Register", "Home")" title="Register">Register</a></li>
                        }
