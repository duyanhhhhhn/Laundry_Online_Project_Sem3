@{
    ViewBag.Title = "Payment Success";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    // Check if user is admin or client
    var customer = Session["customer"] as Laundry_Online_Web_FE.Models.ModelViews.CustomerView;
    var admin = Session["employee"] as Laundry_Online_Web_FE.Models.ModelViews.EmployeeView;
    bool isAdmin = admin != null;
    bool isClient = customer != null;

    // Set appropriate layout
    if (isAdmin)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (isClient)
    {
        Layout = "~/Views/Shared/_LayoutClient.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutClient.cshtml";
    }
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container py-5" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <!-- Success Icon -->
                    <div class="mb-4">
                        <div class="success-icon mx-auto">
                            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                        </div>
                    </div>

                    <!-- Success Message -->
                    <h2 class="text-success mb-3">
                        <i class="fas fa-credit-card mr-2"></i>
                        Payment Successful!
                    </h2>

                    <h4 class="text-success mb-4">Thanh toán thành công!</h4>

                    <!-- Dynamic Success Message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success border-0 mb-4">
                            <i class="fas fa-info-circle mr-2"></i>
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <!-- Payment Details -->
                    <div class="payment-details mb-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="bg-light p-3 rounded mb-3">
                                    <p class="mb-2">
                                        <i class="fas fa-calendar-alt text-primary mr-2"></i>
                                        <strong>Payment Date:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                                    </p>
                                    <p class="mb-2">
                                        <i class="fas fa-user text-primary mr-2"></i>
                                        <strong>Customer:</strong>
                                        @if (isClient)
                                        {
                                            <span>@customer.FirstName @customer.LastName</span>
                                        }
                                        else if (isAdmin)
                                        {
                                            <span>Admin Payment</span>
                                        }
                                        else
                                        {
                                            <span>Guest Payment</span>
                                        }
                                    </p>
                                    <p class="mb-0">
                                        <i class="fas fa-check-circle text-success mr-2"></i>
                                        <strong>Status:</strong> <span class="text-success">Completed</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        @if (isAdmin)
                        {
                            <a href="@Url.Action("Index", "Invoice")" class="btn btn-primary btn-lg mr-3">
                                <i class="fas fa-file-invoice mr-2"></i>
                                View Invoices
                            </a>
                            <a href="@Url.Action("Index", "CustomerPackage")" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-box mr-2"></i>
                                View Packages
                            </a>
                        }
                        else if (isClient)
                        {
                            <a href="@Url.Action("CustomerDetail", "Home",new { id = customer.Id })" class="btn btn-primary btn-lg mr-3">
                                <i class="fas fa-file-invoice mr-2"></i>
                                My Invoices
                            </a>
                            <a href="@Url.Action("CustomerDetail", "Home",new { id = customer.Id })" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-box mr-2"></i>
                                My Packages
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg mr-3">
                                <i class="fas fa-home mr-2"></i>
                                Go Home
                            </a>
                           
                        }
                    </div>

                    <!-- Additional Info -->
                    <div class="mt-4 pt-3 border-top">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt mr-1"></i>
                            Your payment has been processed securely.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .success-icon {
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-10px);
        }
        60% {
            transform: translateY(-5px);
        }
    }

    .card {
        border-radius: 15px;
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .btn-lg {
        border-radius: 25px;
        padding: 12px 30px;
        font-weight: 600;
    }

    .payment-details {
        font-size: 0.95rem;
    }

    .bg-light {
        background: linear-gradient(135deg, #e9ecef 0%, #f8f9fa 100%) !important;
        border: 1px solid #dee2e6;
    }
</style>