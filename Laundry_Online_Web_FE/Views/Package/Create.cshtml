@{
    ViewBag.Title = "Thêm gói dịch vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-plus"></i> Thêm gói dịch vụ mới
                    </h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("CreatePackage", "Package", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Tên gói</label>
                            <div class="col-md-9">
                                <input type="text" name="Package_Name" class="form-control" placeholder="Nhập tên gói dịch vụ" required />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Mô tả</label>
                            <div class="col-md-9">
                                <textarea name="Description" class="form-control" rows="3" placeholder="Nhập mô tả gói dịch vụ"></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Giá</label>
                            <div class="col-md-9">
                                <input type="number" name="Price" class="form-control" step="0.01" min="0" placeholder="Nhập giá" required />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Giá trị</label>
                            <div class="col-md-9">
                                <input type="number" name="Value" class="form-control" min="0" placeholder="Nhập giá trị" required />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Đơn vị</label>
                            <div class="col-md-9">
                                <input type="text" name="Unit" class="form-control" placeholder="Nhập đơn vị (kg, lần, ...)" required />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Số ngày hiệu lực</label>
                            <div class="col-md-9">
                                <input type="number" name="Validity_Day" class="form-control" min="1" placeholder="Nhập số ngày hiệu lực" required />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="Image" class="col-md-3 col-form-label">Image Upload</label>
                            <div class="col-md-9">
                                <input type="file" class="custom-file-input" name="Image" id="Image" onchange="updateFileName(this)">
                                <label class="custom-file-label" for="Image" id="ImageLabel">Choose file</label>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Lưu
                                </button>
                                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateFileName(input) {
        var fileName = "Choose file";
        if (input.files && input.files.length > 0) {
            fileName = input.files[0].name;
            document.getElementById('ImageLabel').classList.add('selected');
        } else {
            document.getElementById('ImageLabel').classList.remove('selected');
        }
        document.getElementById('ImageLabel').textContent = fileName;
    }
</script>
<style>
    .card {
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        padding: 15px;
    }

    .card-title {
        margin: 0;
        font-size: 1.25rem;
        font-weight: 500;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .col-form-label {
        font-weight: 600;
        color: #495057;
    }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }

    .btn {
        margin-right: 10px;
    }
</style>
