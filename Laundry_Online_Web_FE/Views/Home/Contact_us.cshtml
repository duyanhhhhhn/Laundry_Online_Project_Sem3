@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Contact</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Link Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .contact-header {
            background-color: #0d6efd;
            color: white;
            padding: 40px 20px;
            text-align: center;
            border-radius: 8px;
            margin-bottom: 30px;
        }

        .info-box {
            text-align: center;
            border: 1px solid #eee;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }

            .info-box i {
                font-size: 30px;
                margin-bottom: 10px;
            }

        .section-title {
            font-weight: bold;
            margin-bottom: 15px;
        }

        .map-container iframe {
            width: 100%;
            height: 300px;
            border: none;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container py-4">


        <!-- Header -->
        <div class="contact-header">
            <h2>Get In Touch With Us</h2>
            <p>We are always happy to listen and support you.</p>
        </div>

        <!-- Contact Info -->
        <div class="row text-center mb-5">
            <div class="col-md-4 mb-3">
                <div class="info-box">
                    <div><i class="bi bi-geo-alt-fill text-primary"></i></div>
                    <div class="section-title">Address</div>
                    <div>139B Street 79, Tan Quy Ward, District 7</div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="info-box">
                    <div><i class="bi bi-telephone-fill text-primary"></i></div>
                    <div class="section-title">Phone</div>
                    <div>090 9867 322</div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="info-box">
                    <div><i class="bi bi-clock-fill text-primary"></i></div>
                    <div class="section-title">Opening Hours</div>
                    <div>Daily (7:30 AM – 9:00 PM)<br>In-store & Home Delivery</div>
                </div>
            </div>
        </div>

        <!-- Messenger and Map -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="info-box">
                    <h5>Send us a message via Messenger</h5>
                    <a class="btn btn-primary mt-2" href="#" target="_blank">Chat Now</a>
                    <p class="mt-2 text-muted" style="font-size: 14px;">(You will be redirected to Facebook Messenger to chat)</p>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="info-box map-container">
                    <h5>Find us on the map</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.5635791743415!2d106.70814297423207!3d10.843856957827525!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752fd12a55e8e5%3A0x3e9d42de3cb0d4c9!2s139B%20%C4%90%C6%B0%E1%BB%9Dng%2079%2C%20T%C3%A2n%20Quy%2C%20Qu%E1%BA%ADn%207%2C%20Th%C3%A0nh%20ph%E1%BB%91%20H%E1%BB%93%20Ch%C3%AD%20Minh!5e0!3m2!1svi!2s!4v1701234567890" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and icon -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>
</html>
