@{
    ViewBag.Title = "BookService";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    var customer = Session["customer"] as Laundry_Online_Web_FE.Models.ModelViews.CustomerView;
}

<div class="page-calendar">
    <section class="bread-crumb">
        <div class="container">
            <ul class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
                <li class="home" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a itemprop="item" href="@Url.Action("Index", "Home")" title="Trang chủ">
                        <span itemprop="name">Trang chủ</span>
                        <meta itemprop="position" content="1" />
                    </a>
                </li>
                <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <strong itemprop="name">Đặt lịch dịch vụ</strong>
                    <meta itemprop="position" content="2" />
                </li>
            </ul>
        </div>
    </section>

    <section class="evo-book-table evo-page-static page margin-top-20 margin-bottom-20">
        <div class="container">
            <!-- Step Progress Indicator -->
            <div class="stepwizard">
                <div class="stepwizard-row setup-panel">
                    <div class="stepwizard-step">
                        <a href="#step-1" class="btn btn-primary btn-circle" id="step-1-btn">1</a>
                        <p>Chọn ngày và giờ</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-2" class="btn btn-default btn-circle disabled" id="step-2-btn">2</a>
                        <p>Xác nhận thông tin</p>
                    </div>
                    <div class="stepwizard-step">
                        <a href="#step-3" class="btn btn-default btn-circle disabled" id="step-3-btn">3</a>
                        <p>Hoàn thành</p>
                    </div>
                </div>
            </div>

            <!-- Customer Info Display -->
            <div class="customer-welcome mb-4">
                <div class="alert alert-info">
                    <h5><i class="fas fa-user"></i> Xin chào, @customer.FirstName @customer.LastName!</h5>
                    <p class="mb-0"><strong>Điện thoại:</strong> @customer.PhoneNumber | <strong>Địa chỉ:</strong> @customer.Address</p>
                </div>
            </div>

            <form role="form" method="post" id="ant-booking-form" action="@Url.Action("SubmitBooking", "Home")">
                <!-- STEP 1: Date and Time Selection -->
                <div class="row setup-content" id="step-1">
                    <div class="col-md-6 col-sm-12 col-12">
                        <div class="time-selection-panel">
                            <h3>Chọn thời gian</h3>

                            <!-- Time Selection -->
                            <div class="form-group">
                                <label>Thời gian <span class="required">*</span></label>
                                <select name="ServiceTime" id="serviceTime" class="form-control" required>
                                    <option value="">-- Chọn thời gian --</option>
                                    <option value="08:00">8:00 sáng</option>
                                    <option value="08:30">8:30 sáng</option>
                                    <option value="09:00">9:00 sáng</option>
                                    <option value="09:30">9:30 sáng</option>
                                    <option value="10:00">10:00 sáng</option>
                                    <option value="10:30">10:30 sáng</option>
                                    <option value="11:00">11:00 sáng</option>
                                    <option value="11:30">11:30 sáng</option>
                                    <option value="12:00">12:00 trưa</option>
                                    <option value="12:30">12:30 trưa</option>
                                    <option value="13:00">1:00 chiều</option>
                                    <option value="13:30">1:30 chiều</option>
                                    <option value="14:00">2:00 chiều</option>
                                    <option value="14:30">2:30 chiều</option>
                                    <option value="15:00">3:00 chiều</option>
                                    <option value="15:30">3:30 chiều</option>
                                    <option value="16:00">4:00 chiều</option>
                                    <option value="16:30">4:30 chiều</option>
                                    <option value="17:00">5:00 chiều</option>
                                </select>
                            </div>

                            <div class="selected-info mt-4">
                                <h5>Thông tin đã chọn:</h5>
                                <div class="info-box">
                                    <p><strong>Ngày:</strong> <span id="selected-date">Chưa chọn</span></p>
                                    <p><strong>Giờ:</strong> <span id="selected-time">Chưa chọn</span></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 col-12">
                        <!-- Custom Calendar -->
                        <div class="calendar-panel">
                            <h3>Chọn ngày</h3>
                            <div class="custom-calendar">
                                <div class="calendar-header">
                                    <button type="button" class="calendar-nav prev" onclick="changeMonth(-1)">‹</button>
                                    <span class="calendar-title" id="calendar-title">Tháng 7 - 2025</span>
                                    <button type="button" class="calendar-nav next" onclick="changeMonth(1)">›</button>
                                </div>
                                <div class="calendar-weekdays">
                                    <div class="weekday">M</div>
                                    <div class="weekday">T</div>
                                    <div class="weekday">W</div>
                                    <div class="weekday">T</div>
                                    <div class="weekday">F</div>
                                    <div class="weekday">S</div>
                                    <div class="weekday">S</div>
                                </div>
                                <div class="calendar-days" id="calendar-days">
                                    <!-- Days will be generated by JavaScript -->
                                </div>
                            </div>
                            <input type="hidden" name="ServiceDate" id="serviceDate" value="" />
                        </div>
                    </div>

                    <div class="col-md-12 col-sm-12 col-12 ant-button">
                        <button class="btn btn-primary nextBtn pull-right" type="button" onclick="goToStep(2)">Tiếp theo</button>
                    </div>
                </div>

                <!-- STEP 2: Confirmation -->
                <div class="row setup-content" id="step-2" style="display:none;">
                    <div class="col-md-6 col-sm-12 col-12">
                        <!-- Booking Summary -->
                        <div class="booking-summary">
                            <h4>Thông tin đặt lịch</h4>
                            <div class="summary-content">
                                <p><strong>Ngày:</strong> <span id="summary-date"></span></p>
                                <p><strong>Thời gian:</strong> <span id="summary-time"></span></p>
                            </div>
                        </div>

                        <!-- Customer Info Summary -->
                        <div class="customer-summary">
                            <h4>Thông tin khách hàng</h4>
                            <div class="summary-content">
                                <p><strong>Họ tên:</strong> @customer.FirstName @customer.LastName</p>
                                <p><strong>Điện thoại:</strong> @customer.PhoneNumber</p>
                                <p><strong>Địa chỉ:</strong> @customer.Address</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-sm-12 col-12">
                        <!-- Notes Section -->
                        <div class="notes-section">
                            <h4>Ghi chú thêm</h4>
                            <div class="form-group">
                                <label>Ghi chú cho đơn đặt lịch</label>
                                <textarea name="Notes" id="notes" class="form-control" rows="6" placeholder="Nhập ghi chú nếu có (không bắt buộc)"></textarea>
                            </div>

                            <div class="step-buttons">
                                <button type="button" class="btn btn-secondary" onclick="goToStep(1)">Quay lại</button>
                                <button type="button" class="btn btn-primary" onclick="goToStep(3)">Xác nhận đặt lịch</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- STEP 3: Success -->
                <div class="row setup-content" id="step-3" style="display:none;">
                    <div class="col-lg-12">
                        <div class="jumbotron text-center">
                            <div class="success-icon">
                                <i class="fas fa-check-circle" style="font-size: 80px; color: #28a745;"></i>
                            </div>
                            <h3 class="display-3">Cảm ơn bạn!</h3>
                            <p class="lead">
                                <strong>Bạn đã đặt lịch thành công. Chúng tôi sẽ liên hệ để xác nhận trong thời gian sớm nhất.</strong>
                            </p>
                            <hr class="my-4">

                            <!-- Final Summary -->
                            <div class="final-summary">
                                <h5>Thông tin đặt lịch</h5>
                                <div class="row">
                                    <div class="col-md-8 mx-auto">
                                        <div class="summary-details text-left">
                                            <p><strong>Ngày:</strong> <span id="final-date"></span></p>
                                            <p><strong>Thời gian:</strong> <span id="final-time"></span></p>
                                            <p><strong>Khách hàng:</strong> @customer.FirstName @customer.LastName</p>
                                            <p><strong>Điện thoại:</strong> @customer.PhoneNumber</p>
                                            <p><strong>Địa chỉ:</strong> @customer.Address</p>
                                            <p id="final-notes-wrapper" style="display: none;"><strong>Ghi chú:</strong> <span id="final-notes"></span></p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <p class="mt-4">
                                Nếu bạn có thắc mắc hay cần hỗ trợ, vui lòng liên hệ:
                                <a href="tel:0909667322" title="0909667322"><strong>090 9667 322</strong></a>
                            </p>

                            <div class="mt-4">
                                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Về trang chủ</a>
                                <a href="@Url.Action("BookService", "Home")" class="btn btn-outline-primary">Đặt lịch khác</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <!-- JavaScript -->
    <script>
        let currentDate = new Date();
        let selectedDate = null;

        // Initialize calendar
        function initCalendar() {
            updateCalendar();
            updateSelectedInfo();
        }

        // Update calendar display
        function updateCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();

            // Update title
            const monthNames = ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6',
                'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'];
            document.getElementById('calendar-title').textContent = `${monthNames[month]} - ${year}`;

            // Generate days
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            const startDate = new Date(firstDay);
            startDate.setDate(startDate.getDate() - (firstDay.getDay() === 0 ? 6 : firstDay.getDay() - 1));

            const calendarDays = document.getElementById('calendar-days');
            calendarDays.innerHTML = '';

            for (let i = 0; i < 42; i++) {
                const date = new Date(startDate);
                date.setDate(startDate.getDate() + i);

                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day';
                dayElement.textContent = date.getDate().toString().padStart(2, '0');

                // Add classes
                if (date.getMonth() !== month) {
                    dayElement.classList.add('other-month');
                }
                if (date < new Date().setHours(0, 0, 0, 0)) {
                    dayElement.classList.add('past-date');
                } else {
                    dayElement.addEventListener('click', () => selectDate(date));
                }
                if (selectedDate && date.toDateString() === selectedDate.toDateString()) {
                    dayElement.classList.add('selected');
                }
                if (date.toDateString() === new Date().toDateString()) {
                    dayElement.classList.add('today');
                }

                calendarDays.appendChild(dayElement);
            }
        }

        // Change month
        function changeMonth(direction) {
            currentDate.setMonth(currentDate.getMonth() + direction);
            updateCalendar();
        }

        // Select date
        function selectDate(date) {
            selectedDate = new Date(date);
            document.getElementById('serviceDate').value = selectedDate.toISOString().split('T')[0];
            updateCalendar();
            updateSelectedInfo();
        }

        // Time selection change event
        document.getElementById('serviceTime').addEventListener('change', function () {
            updateSelectedInfo();
        });

        // Update selected info display
        function updateSelectedInfo() {
            const timeValue = document.getElementById('serviceTime').value;
            const timeText = document.getElementById('serviceTime').options[document.getElementById('serviceTime').selectedIndex].text;

            document.getElementById('selected-date').textContent = selectedDate ? formatDate(selectedDate) : 'Chưa chọn';
            document.getElementById('selected-time').textContent = timeValue ? timeText : 'Chưa chọn';
        }

        // Step navigation function
        function goToStep(stepNumber) {
            // Validate current step before proceeding
            if (stepNumber === 2 && !validateStep1()) {
                return false;
            }
            if (stepNumber === 3 && !validateStep2()) {
                return false;
            }

            // Hide all steps
            document.getElementById('step-1').style.display = 'none';
            document.getElementById('step-2').style.display = 'none';
            document.getElementById('step-3').style.display = 'none';

            // Show target step
            document.getElementById('step-' + stepNumber).style.display = 'block';

            // Update step indicators
            updateStepIndicators(stepNumber);

            // Update summary when going to step 2
            if (stepNumber === 2) {
                updateBookingSummary();
            }

            // Submit form and show final summary when going to step 3
            if (stepNumber === 3) {
                submitBooking();
            }

            return true;
        }

        // Validate Step 1
        function validateStep1() {
            const serviceTime = document.getElementById('serviceTime').value;
            const serviceDate = document.getElementById('serviceDate').value;

            if (!serviceTime || !serviceDate) {
                alert('Vui lòng chọn ngày và giờ!');
                return false;
            }
            return true;
        }

        // Validate Step 2 (simplified since customer info is pre-filled)
        function validateStep2() {
            return true; // No additional validation needed
        }

        // Update step indicators
        function updateStepIndicators(currentStep) {
            // Reset all step indicators
            for (let i = 1; i <= 3; i++) {
                const stepBtn = document.getElementById('step-' + i + '-btn');
                stepBtn.className = 'btn btn-default btn-circle';
                if (i < currentStep) {
                    stepBtn.className = 'btn btn-success btn-circle';
                } else if (i === currentStep) {
                    stepBtn.className = 'btn btn-primary btn-circle';
                }
            }
        }

        // Update booking summary
        function updateBookingSummary() {
            const timeText = document.getElementById('serviceTime').options[document.getElementById('serviceTime').selectedIndex].text;

            document.getElementById('summary-date').textContent = selectedDate ? formatDate(selectedDate) : '';
            document.getElementById('summary-time').textContent = timeText;
        }

        // Submit booking and show final summary
        function submitBooking() {
            const timeText = document.getElementById('serviceTime').options[document.getElementById('serviceTime').selectedIndex].text;
            const notesValue = document.getElementById('notes').value;

            // Update final summary
            document.getElementById('final-date').textContent = selectedDate ? formatDate(selectedDate) : '';
            document.getElementById('final-time').textContent = timeText;

            // Handle notes display
            if (notesValue && notesValue.trim() !== '') {
                document.getElementById('final-notes').textContent = notesValue;
                document.getElementById('final-notes-wrapper').style.display = 'block';
            } else {
                document.getElementById('final-notes-wrapper').style.display = 'none';
            }

            // Submit form to server
            const formData = new FormData(document.getElementById('ant-booking-form'));

            fetch('@Url.Action("SubmitBooking", "Home")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    console.log('Booking submitted successfully:', data);
                    // Success message is already displayed in step 3
                } else {
                    console.error('Booking submission failed:', data.message);
                    alert('Lỗi: ' + data.message);
                    // Go back to step 2 if there's an error
                    goToStep(2);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Đã xảy ra lỗi khi gửi đặt lịch. Vui lòng thử lại.');
                goToStep(2);
            });
        }

        // Format date helper
        function formatDate(date) {
            return date.toLocaleDateString('vi-VN');
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function () {
            initCalendar();
            updateStepIndicators(1);
        });
    </script>

